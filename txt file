import os
# get the desktop path
desktop_path = os.path.join(os.path.expanduser("~"), "Desktop")

# Define file paths
input_file = os.path.join(desktop_path, "input.txt")
output_file = os.path.join(desktop_path, "output.txt")

# Step 1: Create and write content into input.txt
with open(input_file, "w") as f:
    f.write("Programming is fun.\n")
    f.write("Python is a programming Language.\n")
    f.write("Abuja is Nigeria's capital city.\n")
    f.write("Nigeria has a lot of natural resources.\n")
    f.write("many beginners start learning progamming with python but i diidmine with java.\n")

# Step 2: Read the contents of input.txt
with open(input_file, "r") as f:
    content = f.read()

# Step 3: Count the number of words
words = content.split()
word_count = len(words)

# Step 4: Convert text to uppercase
processed_text = content.upper()

# Step 5: Write processed text and word count to output.txt
with open(output_file, "w") as f:
    f.write(processed_text + "\n")
    f.write(f"\nWord Count: {word_count}\n")

# Step 6: Print success message
print(f" Processing complete! The file 'output.txt' has been created on your Desktop.")
